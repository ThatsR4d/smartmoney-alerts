# SmartMoneyAlerts Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Twitter/X API (Get from developer.twitter.com)
# ===========================================
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ===========================================
# Discord Bot (Get from discord.com/developers)
# ===========================================
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=
DISCORD_FREE_CHANNEL_ID=
DISCORD_PREMIUM_CHANNEL_ID=
DISCORD_PREMIUM_ROLE_ID=

# Optional: Discord Webhook URL (simpler than full bot)
DISCORD_WEBHOOK_URL=

# ===========================================
# Database
# ===========================================
DATABASE_PATH=data/smartmoney.db

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable Twitter posting
TWITTER_ENABLED=true

# Enable/disable Discord posting
DISCORD_ENABLED=true

# Actually post to Twitter (false = log only)
POST_TO_TWITTER=true

# Dry run mode (no actual posts, just logging)
DRY_RUN=true

# ===========================================
# Scraping Settings
# ===========================================
# How often to scrape SEC (in minutes)
SCRAPE_INTERVAL_MINUTES=10

# Minimum transaction value to track (in dollars)
MIN_TRANSACTION_VALUE=50000

# Maximum posts per hour (rate limiting)
MAX_POSTS_PER_HOUR=10
